<h2>订单列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>生成时间</th>
      <th>付款</th>
      <th>付款方式</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to(order.id, order_path(order.token)) %></td>
        <td><%= order.created_at.to_s(:long) %></td>
        <td><%= order.is_paid %></td>
        <td><%= order.payment_method %></td>
      </tr>
    <% end %>
  </tbody>
</table>
